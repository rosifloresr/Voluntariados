{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["jest", "node"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "test", "jest.config.js"]
}
